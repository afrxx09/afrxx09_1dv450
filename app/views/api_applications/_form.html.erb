<div class="block-form">
	<%= form_for @api_app do |f| %>
		<%= render 'shared/form_errors', object: f.object %>
		<div>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<div>
			<%= f.label :description %>
			<%= f.text_area :description %>
		</div>
		<div>
			<%= f.submit "Save", class: "blue" %>
		</div>
	<% end %>
</div>