<h2>Users</h2>
<div class="row">
	<div class="col w100">
		<div class="list">
			<% @users.each do |u| %>
				<div class="row">
					<div class="col w25">
						<%= u.first_name %> <%= u.last_name %>
					</div>
					<div class="col w25">
						<%= u.email %>
					</div>
					<div class="col w50">
						<% if !u.api_key.nil? %>
							<%= link_to('Delete API-key', api_key_path(u.id), :class => 'button button-red', method: :delete) %>
						<% else %>
							<span>No key</span>	
						<%end%> 
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>