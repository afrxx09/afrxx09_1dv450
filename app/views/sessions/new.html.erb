<div>
	<%= form_for :session, url: sign_in_path do |f| %>
		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

	  	<%= f.check_box :remember_me %>
	  	<%= f.label :remember_me, 'Remember me!' %>
		<%= f.submit 'Sign in' %>
	<% end %>

	<p><%= link_to 'Sign up!', sign_up_path %></p>
</div>