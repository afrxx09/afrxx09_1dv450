<div>
	<h2>Sign in</h2>
	<%= form_for :session, url: sign_in_path do |f| %>
		<div class="block-form">
			<%= f.label :email %>
			<%= f.email_field :email %>
		</div>
		<div class="block-form">
			<%= f.label :password %>
			<%= f.password_field :password %>
		</div>
		<div>
	  		<%= f.check_box :remember_me %>
	  		<%= f.label :remember_me, 'Remember me!' %>
	  	</div>
		<div>
			<%= f.submit 'Sign in', class: 'blue' %>
		</div>
	<% end %>

	<p><%= link_to 'Sign up!', sign_up_path %></p>
</div>